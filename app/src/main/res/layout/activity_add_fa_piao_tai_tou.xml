<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/common_header3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"></include>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/whiteFFFFFF"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="90%w"
        app:layout_marginTopPercent="5%w"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="25%w"
            android:gravity="center_vertical"
            app:layout_textSizePercent="5%w"
            android:text="@string/title_tai_tou"
            android:textColor="@color/black272727"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5%w"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et_fa_piao_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_textSizePercent="5%w"
            android:hint="@string/danwei_name"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray9999999"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray9999999"
            android:background="@null"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>