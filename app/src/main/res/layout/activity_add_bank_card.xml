<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/common_header2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qing_bang_ding_ni_de_yin_hang_ka"
        android:textColor="@color/gray9999999"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="5%w"
        app:layout_textSizePercent="5%w" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="5%w"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/tv_chi_ka_ren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/chi_ka_ren"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w" />

        <EditText
            android:id="@+id/et_chi_ka_ren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_chi_ka_ren"
            android:background="@null"
            android:hint="@string/chi_ka_ren_name"
            android:textColor="@color/gray9999999"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="50%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="0.5%w"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/tv_ka_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ka_hao"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w" />

        <EditText
            android:id="@+id/et_input_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_ka_hao"
            android:background="@null"
            android:hint="@string/qing_shu_ru_yin_hang_ka"
            android:textColor="@color/gray9999999"
            app:layout_marginLeftPercent="10%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="50%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ImageButton
        android:id="@+id/ib_next_step"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/next_step"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="5%w"
        app:layout_widthPercent="60%w" />


</com.zhy.android.percent.support.PercentLinearLayout>