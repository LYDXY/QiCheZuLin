<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_heightPercent="12%w">

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/zoom2x"
            android:gravity="center_vertical"
            android:hint="@string/guan_jian_zi"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_heightPercent="8%w"
            app:layout_marginLeftPercent="6%w"
            app:layout_paddingLeftPercent="8%w"
            app:layout_textSizePercent="4%w"
            app:layout_widthPercent="75%w">

        </EditText>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/quxiao"
            android:textColor="@color/whiteFFFFFF"
            app:layout_heightPercent="10%w"
            app:layout_marginRightPercent="5%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="10%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>