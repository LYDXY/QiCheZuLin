<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rrl_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteFFFFFF"
        app:layout_widthPercent="100%w">

        <CheckBox
            android:id="@+id/ck_is_choose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/selector1"
            android:button="@null"
            app:layout_heightPercent="5%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginTopPercent="1.5%w"
            app:layout_widthPercent="5%w"
            android:layout_centerVertical="true"
            android:checked="false" />

        <TextView
            android:id="@+id/tv_show_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%w"
            android:textColor="@color/gray9999999"
            app:layout_textSizePercent="4.5%w"
            app:layout_marginLeftPercent="4%w"
            android:layout_toRightOf="@+id/ck_is_choose"
            app:layout_marginTopPercent="2%w"
            />
        <TextView
            android:id="@+id/tv_create_date"
            android:layout_toRightOf="@+id/ck_is_choose"
            android:layout_below="@+id/tv_show_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%w"
            android:text="@string/quche_time_show"
            android:textColor="@color/gray9999999"
            app:layout_textSizePercent="4.5%w"
            app:layout_marginTopPercent="2%w"
            app:layout_marginLeftPercent="4%w"
            app:layout_marginBottomPercent="2%w"
            />


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>