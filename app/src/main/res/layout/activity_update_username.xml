<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        layout="@layout/common_header3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_heightPercent="15%w"
        app:layout_widthPercent="100%w"
        app:layout_marginTopPercent="4%w"
        android:id="@+id/prl_first">

        <TextView
            android:id="@+id/tv_ni_cheng"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ni_cheng"
            android:textColor="@color/gray_6d6d6d"
            app:layout_heightPercent="12%w"
            app:layout_widthPercent="15%w"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="6%w"
            app:layout_textSizePercent="5%w" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/tv_ni_cheng"
            android:textColor="@color/gray_6d6d6d"
            app:layout_heightPercent="12%w"
            app:layout_widthPercent="70%w"
            android:background="@null"
            android:layout_centerVertical="true"
            android:hint="@string/input_user_name"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray9999999"
            app:layout_textSizePercent="4%w" />




    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>