<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:orientation="vertical" >

    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"
        layout="@layout/common_header2" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="7%w"
            app:layout_marginBottomPercent="6%w"
            app:layout_marginLeftPercent="30%w"
            app:layout_marginRightPercent="30%w"
            app:layout_marginTopPercent="6%w"
            app:layout_textSizePercent="4%w"
            android:background="@drawable/drawable_round_orange"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="6%w"
        app:layout_marginRightPercent="6%w"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3.5%w"
        android:text="支付成功后,金额会直接充到您的余额中"
        android:textColor="@color/gray1" />

</com.zhy.android.percent.support.PercentLinearLayout>