<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"
        layout="@layout/common_header2" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="5%w"
        app:layout_widthPercent="94%w"
        android:background="@color/white"
        android:orientation="vertical" >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginTopPercent="8%w"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="5.5%w"
                android:text="银行卡"
                android:textColor="@color/black" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginTopPercent="8%w"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="5.5%w"
                android:text="提现金额"
                android:textColor="@color/black" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginTopPercent="8%w"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="7%w"
                android:text="¥"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginTopPercent="8%w"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5.5%w"
                android:background="@null"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            android:background="@drawable/drawable_line" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginBottomPercent="8%w"
            app:layout_marginLeftPercent="8%w"
            app:layout_marginRightPercent="8%w"
            app:layout_marginTopPercent="8%w"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="5.5%w"
                android:text="当前钱包余额1000元"
                android:textColor="@color/gray0" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="4%w"
        app:layout_textSizePercent="4%w"
        android:background="@null"
        android:gravity="center"
        android:text="当天24点前到账"
        android:textColor="@color/gray0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="30%w"
        app:layout_marginRightPercent="30%w"
        app:layout_marginTopPercent="6%w"
        app:layout_textSizePercent="4.5%w"
        android:background="@drawable/drawable_round_gray"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/white" />

</com.zhy.android.percent.support.PercentLinearLayout>