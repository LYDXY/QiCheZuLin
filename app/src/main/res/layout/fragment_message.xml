<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tl_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_heightPercent="10%w"
        app:layout_marginTopPercent="3%w"
        app:layout_widthPercent="80%w"
        tl:tl_bar_color="@color/whiteFFFFFF"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_margin_bottom="2dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_margin_top="2dp"
        tl:tl_tab_space_equal="true" />

    <com.tongcheng.qichezulin.pulltorefresh.PullToRefreshLayout
        android:id="@+id/prl_prl_03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="95%w"
        app:layout_marginTopPercent="2%w"
        android:gravity="center_horizontal">

        <com.tongcheng.qichezulin.pulltorefresh.PullableListView
            android:id="@+id/plv_order_finish_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_eeeeee"
            android:divider="@color/grayF0F0F0"

            android:dividerHeight="6dip">

        </com.tongcheng.qichezulin.pulltorefresh.PullableListView>
    </com.tongcheng.qichezulin.pulltorefresh.PullToRefreshLayout>


</com.zhy.android.percent.support.PercentLinearLayout>