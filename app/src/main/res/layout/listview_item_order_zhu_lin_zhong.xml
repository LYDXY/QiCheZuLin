<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/whiteFFFFFF"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%w"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:background="@color/whiteFFFFFF"
            android:gravity="center_vertical"
            android:text="@string/order_number"
            android:textColor="@color/gray9999999"
            app:layout_heightPercent="8%w"
            app:layout_textSizePercent="5%w"
            app:layout_marginLeftPercent="4%w"
            app:layout_widthPercent="80%w" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:background="@color/whiteFFFFFF"
            android:gravity="center"
            android:text="@string/jin_xing_zhong"
            android:textColor="@color/orange_ff7220"
            app:layout_heightPercent="8%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="20%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/whiteFFFFFF"
        app:layout_heightPercent="30%w"
        app:layout_marginTopPercent="0.2%w"
        app:layout_widthPercent="100%w">

        <ImageView
            android:id="@+id/iv_car_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="25%w"
            app:layout_marginLeftPercent="4%w"
            app:layout_widthPercent="35%w" />

        <TextView
            android:id="@+id/tv_quchewangdian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/iv_car_picture"
            android:gravity="center"
            android:text="@string/qu_che_wang_dian"
            android:textColor="@color/black"
            app:layout_heightPercent="6%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginTopPercent="8%w"
            app:layout_textSizePercent="4.5%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/tv_qucheshijian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/iv_car_picture"
            android:layout_below="@+id/tv_quchewangdian"
            android:gravity="center"
            android:text="@string/qu_che_time"
            android:textColor="@color/black"
            app:layout_heightPercent="6%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginTopPercent="1%w"
            app:layout_textSizePercent="4.5%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/tv_show_qu_che_shop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="50%w"
            android:text="@string/address_show"
            android:gravity="center_vertical"
            android:textColor="@color/gray9999999"
            app:layout_textSizePercent="4.5%w"
            android:layout_toRightOf="@+id/tv_quchewangdian"
            app:layout_marginTopPercent="8%w"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="50%w"
            android:text="@string/quche_time_show"
            android:gravity="center_vertical"
            android:textColor="@color/gray9999999"
            app:layout_textSizePercent="4.5%w"
            android:layout_toRightOf="@+id/tv_qucheshijian"
            android:layout_below="@+id/tv_show_qu_che_shop"
            app:layout_marginTopPercent="1%w"
            />


    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        app:layout_heightPercent="10%w"
        app:layout_widthPercent="100%w"
        android:background="@color/whiteFFFFFF"
        app:layout_marginTopPercent="0.2%w"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_show_crete_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4%w"
            app:layout_heightPercent="10%w"
            android:text="@string/show_price"
            app:layout_textSizePercent="5%w"
            android:textColor="@color/orange_ff7220"
            android:gravity="center_vertical"
            app:layout_widthPercent="65%w"/>

        <ImageView
            android:id="@+id/iv_quan_e_zhi_fu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7%w"
            android:layout_centerVertical="true"
            app:layout_widthPercent="20%w"
            android:src="@mipmap/li_ji_huan_che"
            app:layout_marginLeftPercent="10%w"
            android:layout_toRightOf="@+id/tv_show_crete_date"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>