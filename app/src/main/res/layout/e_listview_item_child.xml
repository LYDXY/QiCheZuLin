<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rrl_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayF0F0F0"
        app:layout_heightPercent="50%w"
        app:layout_widthPercent="100%w">

        <ImageView
            android:id="@+id/iv_lansekuai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/lansekuai"
            android:visibility="gone"
            app:layout_heightPercent="10%w"
            app:layout_marginLeftPercent="10%w"
            app:layout_widthPercent="10%w" />


        <TextView
            android:id="@+id/tv_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/long_hu_qu"
            android:textColor="@color/gray9999999"
            app:layout_marginLeftPercent="30%w"
            app:layout_textSizePercent="16%w" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>