<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:orientation="vertical">

    <include
        layout="@layout/common_header2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"></include>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_bank_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <ImageButton
            android:id="@+id/ib_add_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/lv_bank_cards"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/add_bank_card"
            android:scaleType="centerInside"
            app:layout_heightPercent="11%w"
            app:layout_marginTopPercent="3%w"
            app:layout_widthPercent="80%w" />


    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>