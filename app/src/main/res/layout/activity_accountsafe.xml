<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF0F0F0"
    android:orientation="vertical" >

    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w"
        layout="@layout/common_header2" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/prl_first"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="2%w"
        app:layout_widthPercent="100%w"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="6%w"
            app:layout_textSizePercent="4%w"
            android:text="设置支付密码"
            android:textColor="@color/gray_6d6d6d" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="4%w"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="4%w"
            android:src="@mipmap/jiantou" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="6%w"
        app:layout_marginRightPercent="6%w"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="4%w"
        android:text="此密码用于使用[余额]等资产时进行验证"
        android:textColor="@color/gray1" />

</com.zhy.android.percent.support.PercentLinearLayout>