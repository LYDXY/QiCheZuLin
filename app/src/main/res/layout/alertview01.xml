<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_yu_er_pay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/yuer"
        app:layout_heightPercent="25%w"
        app:layout_marginBottomPercent="5%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="5%w"
        app:layout_paddingPercent="2%w"
        app:layout_widthPercent="25%w" />

    <ImageView
        android:id="@+id/iv_zhi_fu_bao_pay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/zhifubao"
        app:layout_heightPercent="25%w"
        app:layout_widthPercent="25%w" />


    <ImageView
        android:id="@+id/iv_wei_xin_pay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/weixing"
        app:layout_heightPercent="25%w"
        app:layout_marginBottomPercent="5%w"
        app:layout_marginRightPercent="5%w"
        app:layout_marginTopPercent="5%w"
        app:layout_paddingPercent="2%w"
        app:layout_widthPercent="25%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>