<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/whiteFFFFFF"
        app:layout_heightPercent="15%w"
        app:layout_marginTopPercent="0.2%w"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/tv_show_car_type_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/small_car"
            android:textColor="@color/black272727"
            app:layout_heightPercent="8%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="30%w" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8%w"
            app:layout_widthPercent="8%w"
            android:src="@mipmap/nochose"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%w"
            android:background="@color/whiteFFFFFF" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>